/* pages/components/dialog.wxss */
.dialog-mask{
  position: fixed;
    z-index: 10000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
}
.dialog-info{
    position: fixed;
    z-index: 15000;
    width: 80%;
    max-width: 600rpx;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #FFFFFF;
    text-align: center;
    border-radius: 3px;
    overflow: hidden;
}
.dialog-title{
    font-size: 36rpx;
    padding: 30rpx 30rpx;
    line-height: 36rpx;
}
.dialog-content{
    width: 100%;
    /* padding: 10rpx 30rpx 20rpx; */
    min-height: 80rpx;
    font-size: 32rpx;
    line-height: 1.3;
    word-wrap: break-word;
    word-break: break-all;
    /* color: #999999; */
    /* background-color: #ebecee; */
    text-align: center;
}
.dialog-footer{
    display: flex;
    align-items: center;
    position: relative;
    line-height: 90rpx;
    font-size: 34rpx;
}
.dialog-btn{
    display: block;
    -webkit-flex: 1;
    flex: 1;
    position: relative;
    color: #f4820d;
}
.dialog-img{
    padding-top: 30px;
    width: 90px;
    height: 90px;
}
.dialog-content-img{
    height: 150px;
}
.dialog-content-text{
    padding-bottom: 30px;
    color: #999999;
    text-align: center;
}
.dialog-divLine{
    background: #ededed;
    width: 100%;
    height: 3rpx;
}