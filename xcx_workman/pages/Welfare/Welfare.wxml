<view class="container">
	<view class="hengxian"></view>
	<view class="top zongxiang">
		<view class="top-title hengxiang">
			<view class="top-title-right hengxiang">
				<view class="top-title-right-img">
					<image src="{{viewUrl}}static/image/search.png" class="search-img"></image>
				</view>
				<view class="top-title-right-shuru">
					<input type="text" placeholder="输入活动标题搜索" bindinput="getText" class="shurukuang"></input>
				</view>
				<view class="top-title-right-sousuo">
					<view class="sousuo-button" bindtap="getGoods">搜索</view>
				</view>
			</view>
			<view class="top-search-fabu">
				<image src="{{viewUrl}}static/image/fabuhuodong.png" bindtap="submitWelfare" data-type="2" class="fabu-img"></image>
			</view>
		</view>
		<view class="top-img">
			<image src="{{viewUrl}}static/image/gongyi.png" class="bg-img"></image>
		</view>
	</view>
	<view class="content zongxiang">
		<!-- 公益活动模块 -->
		<view class="recruitment-need">
			<view class="list zongxiang" wx:for="{{gongyilist}}" wx:for-index="index" wx:key="index">
				<view class="recruitment-list" bindtap="WelfareDetail" data-list="{{item}}">
					<view class="list-top hangxiang">
						<view class="list-top-right list-top-right-text">{{item.title}}</view>
					</view>
					<view class="list-top-henxian"></view>
					<view class="list-top list-top-margin hangxiang">
						<view class="content-left-img zongxiang">
							<view>
								<image src="{{viewUrl}}static/image/zhaogongjs.png" class="content-shalou-img"></image>
							</view>
						</view>
						<view class="content-text">
							<text class="content-text-page">描述：{{item.content}}</text>
						</view>
					</view>
					<view class="list-top list-top-margin hangxiang">
						<view class="content-left-img zongxiang">
							<view>
								<image src="{{viewUrl}}static/image/shijian.png" class="content-shalou-img"></image>
							</view>
						</view>
						<view class="content-text1 text-jiequ" style="width:68%;">
							<text>{{item.time}}</text>
						</view>
						<view class="complete-button" style="width:135rpx;" catchtap="zaixianlianxi" data-wxid="{{xqxqlist.wxUserId}}" data-name="{{xqxqlist.name}}">我要报名</view>
					</view>
				</view>
			</view>
		</view>

	</view>
</view>


<block wx:if="{{isShowConfirm}}">
	<view class='toast-box'>
		<view class='toastbg'></view>
		<view class='showToast'>
			<view class='toast-title'>
				<text>填写个人信息</text>
			</view>
			<view class='toast-main'>
				<view class='toast-input hengxiang'>
					<view class="key-class">姓名：</view>
					<view class="value-class"><input type='password' placeholder='输入姓名' bindinput='signName' value="{{signName}}"></input></view>
				</view>
			</view>
			<view class='toast-main'>
				<view class='toast-input hengxiang'>
					<view class="key-class">电话</view>
					<view class="value-class"><input type='text' placeholder='输入联系电话' bindinput='signPhone' data-name='{{signPhone}}'></input></view>
				</view>
			</view>
			<view class='toast-button'>
				<view class='button1'>
					<view catchtap='cancel'>取消</view>
				</view>
				<view class='button2'>
					<view catchtap='confirmAcceptance'>确定</view>
				</view>
			</view>
		</view>
	</view>
</block>