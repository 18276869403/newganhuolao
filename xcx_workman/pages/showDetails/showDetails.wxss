/* pages/showDetails/showDetails.wxss */
page{
  padding-bottom: 50rpx;
}
.banner {
  width: 100%;
  text-align: center;
  background: #fff;
  height: 1000rpx;
}

.swiper {
  height: 1000rpx;
  margin-bottom: 20rpx;
  width: 100%;
  margin: auto;
}

.slide-image {
  /* width: 100%; */
  height: 1000rpx;
}

/* 顶部详情 */

.top {
  width: 94%;
  margin-left: 3%;
  margin-right: 3%;
  margin-top: 30rpx;
  position: relative;
}

.top-text {
  margin-top: 10rpx;
  color: #333;
  font-size: 16px;
  width: 94%;
  margin-right: 3%;
  margin-left: 3%;
}

.top-left {
}

.top-content {
  margin-left: 20rpx;
  margin-top: 4rpx;
}

.avator-img {
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
}

.top-content-top {
  font-size: 14px;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 68%;
}

.top-content-bottom {
  font-size: 11px;
  color: #999;
}

.dingwei-img {
  width: 30rpx;
  height: 30rpx;
}

.time-img {
  width: 30rpx;
  height: 30rpx;
}

.top-content-bottom-item {
  margin-right: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.top-content-bottom-item1 {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.top-button {
  width: 144rpx;
  height: 52rpx;
  background: rgba(238, 71, 31, 1);
  border-radius: 4rpx;
  position: absolute;
  right: 0rpx;
  text-align: center;
  color: #fff;
  font-size: 14px;
  line-height: 52rpx;
  top: 5rpx;
}

/* 评论 */

.content {
  border-top: 16rpx solid #f5f6f9;
  margin-top: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
  position: relative;
}

.content-title {
  height: 88rpx;
  line-height: 88rpx;
}

.content-text {
  font-size: 14px;
  color: #333;
  position: absolute;
  left: 3%;
}

.content-button {
  width: 144rpx;
  height: 50rpx;
  border-radius: 4rpx;
  border: 2rpx solid rgba(244, 130, 13, 1);
  text-align: center;
  line-height: 50rpx;
  color: #f4820d;
  font-size: 12px;
  margin-top: 19rpx;
  position: absolute;
  right: 3%;
}

.bottom {
  font-size: 14px;
  color: #333;
}

.bottom-list {
  width: 94%;
  margin-right: 3%;
  margin-left: 3%;
  padding-top: 24rpx;
  padding-bottom: 24rpx;
  position: relative;
  border-bottom: 2rpx solid #F0F0F0
}

.avator-img1 {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.top-content-top1 {
  font-size: 14px;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 60rpx;
  margin-left: 16rpx;
}

.bottom-time {
  position: absolute;
  right: 0rpx;
  line-height: 60rpx;
  color: #999999;
  font-size: 11px
}

.time-img1 {
  width: 30rpx;
  height: 30rpx;
  margin-top: 15rpx;
}
.bottom-details{
  font-size: 14px;
  color: #666;
  margin-left: 11%;
}
