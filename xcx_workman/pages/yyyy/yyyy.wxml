<input placeholder="输入门宽" placeholder-class="placeholderStyle" type="number" value="{{mkd}}" bindinput="mkd" class="ipt"></input></view>
<view class="mi"><text >米</text></view>
</view>
<view class="xfk">
<view class="mingzi">门数量</view>
<view class="shuruk">
<input placeholder="输入数量" placeholder-class="placeholderStyle" type="number" value="{{msl}}" bindinput="msl" class="ipt"></input></view>
<view class="mi"><text >扇</text></view>
</view>
<view class="xfk">
<view class="mingzi">窗高度</view>
<view class="shuruk">
<input placeholder="输入高度" placeholder-class="placeholderStyle" type="number" value="{{cgd}}" bindinput="cgd" class="ipt"></input></view>
<view class="mi"><text >米</text></view>
</view>
<view class="xfk">
<view class="mingzi">窗宽度</view>
<view class="shuruk">
<input placeholder="输入宽度" placeholder-class="placeholderStyle" type="number" value="{{ckd}}" bindinput="ckd" class="ipt"></input></view>
<view class="mi"><text >米</text></view>
</view>
<view class="xfk">
<view class="mingzi">窗数量</view>
<view class="shuruk">
<input placeholder="输入数量" placeholder-class="placeholderStyle" type="number" value="{{csl}}" bindinput="csl" class="ipt"></input></view>
<view class="mi"><text >扇</text></view>
</view>
<view class="xfk02">
<view class="mingzi02" bindtap="jisuan"><text >立即计算</text></view>
</view>
<view class="xfk03">
<view class="mingzi03"><text >行业标准  8.6 平米/升</text></view>
</view>


</view>

