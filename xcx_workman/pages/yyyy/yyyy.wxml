<view class="shuruk">
<input placeholder="输入进深" placeholder-class="placeholderStyle" type="number" value="{{shendu}}" bindinput="shendu" class="ipt"></input></view>
<view class="mi"><text >米</text>
</view>

</view>
<view class="xfk">
<view class="mingzi">房间宽度</view>
